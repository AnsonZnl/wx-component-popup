/* component/popup/popup.wxss */

/* 这里的样式只应用于这个自定义组件 */

/* 弹窗蒙版 start */

.alert-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 80%;
  height: 55%;
  position: fixed;
  top: 45%;
  left: -1%;
  z-index: 9999;
  box-sizing: border-box;
  padding: 25rpx;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modelTitle {
  font-size: 38rpx;
  margin-bottom: 20rpx;
}

.hide-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 50rpx;
}

/* 弹窗蒙版 end*/
